#!/bin/bash

date=`date +%Y-%m-%d`
timestr=$(($(date +'%s * 1000 + %-N / 1000000')))

if [ -z "$name" ]; then
	name=$timestr
else
	name="${name}_${timestr}"
fi

dir=experiments/$name
init_dir=$(pwd)

git checkout -B working
git add -A
git commit --allow-empty -m "Experiment $name"
git push origin working

echo "Launching in $dir"
mkdir -p "$dir"
cd "$dir"
git clone -b working --recurse-submodules --depth 1 git@github.com:insperatum/text-patterns.git . 

ln -s $init_dir/envs #anaconda-project

bash

